<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/header_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBGHeader"
            android:gravity="center"
            android:padding="@dimen/spaceMedium"
            android:text="@string/header"
            android:textColor="@color/colorTextHeader"
            android:textSize="@dimen/textHeader"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spaceRibbon"
            android:layout_below="@+id/header_text"
            android:background="@color/colorTextHeader" />

        <LinearLayout
            android:id="@+id/score_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/spaceZero"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spaceXLarge"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spaceMedium"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/spaceZero"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:padding="@dimen/spaceMedium"
                        android:text="@string/athlete_a"
                        android:textColor="@color/colorTextHeader"
                        android:textSize="@dimen/textHeader" />

                    <TextView
                        android:id="@+id/Athlete_a_score"
                        android:layout_width="@dimen/spaceZero"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/zero"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="@dimen/textScore" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spaceMedium"
                    android:background="@drawable/white_uni"
                    android:backgroundTint="@color/colorBGTint"
                    android:backgroundTintMode="src_over"
                    android:orientation="vertical"
                    android:padding="@dimen/spaceSmall">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spaceSmall"
                    android:layout_marginLeft="@dimen/spaceLarge"
                    android:layout_marginRight="@dimen/spaceLarge"
                    android:layout_marginTop="@dimen/spaceLarge"
                    android:onClick="yukoForAthleteA"
                    android:text="@string/yuko"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spaceSmall"
                    android:layout_marginLeft="@dimen/spaceLarge"
                    android:layout_marginRight="@dimen/spaceLarge"
                    android:onClick="wazaariForAthleteA"
                    android:text="@string/wazaari" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spaceSmall"
                    android:layout_marginLeft="@dimen/spaceLarge"
                    android:layout_marginRight="@dimen/spaceLarge"
                    android:onClick="ipponForAthleteA"
                    android:text="@string/ippon" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="@dimen/spaceRibbon"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/spaceRibbonTop"
                android:background="@color/colorTextHeader" />

            <LinearLayout
                android:layout_width="@dimen/spaceZero"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spaceXLarge"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spaceMedium"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/spaceZero"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:padding="@dimen/spaceMedium"
                        android:text="@string/athlete_b"
                        android:textColor="@color/colorTextHeader"
                        android:textSize="@dimen/textHeader" />

                    <TextView
                        android:id="@+id/Athlete_b_score"
                        android:layout_width="@dimen/spaceZero"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/zero"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="@dimen/textScore" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spaceMedium"
                    android:background="@drawable/blue_uni"
                    android:backgroundTint="@color/colorBGTint"
                    android:backgroundTintMode="src_over"
                    android:orientation="vertical"
                    android:padding="@dimen/spaceSmall">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spaceSmall"
                    android:layout_marginLeft="@dimen/spaceLarge"
                    android:layout_marginRight="@dimen/spaceLarge"
                    android:layout_marginTop="@dimen/spaceLarge"
                    android:onClick="yukoForAthleteB"
                    android:text="@string/yuko"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spaceSmall"
                    android:layout_marginLeft="@dimen/spaceLarge"
                    android:layout_marginRight="@dimen/spaceLarge"
                    android:onClick="wazaariForAthleteB"
                    android:text="@string/wazaari" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spaceSmall"
                    android:layout_marginLeft="@dimen/spaceLarge"
                    android:layout_marginRight="@dimen/spaceLarge"
                    android:onClick="ipponForAthleteB"
                    android:text="@string/ippon" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/winner_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/score_layout"
            android:layout_marginTop="@dimen/spaceSmall"
            android:padding="@dimen/spaceMedium"
            android:text=""
            android:textAlignment="center"
            android:textSize="@dimen/textButton"
            android:textStyle="bold"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/winner_textview"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/colorPrimaryDark"
            android:onClick="resetScore"
            android:text="@string/reset_button"
            android:textColor="@color/colorTextWhite" />

    </RelativeLayout>

</ScrollView>
